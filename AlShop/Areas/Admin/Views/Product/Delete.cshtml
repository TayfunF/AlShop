@model Product

@{
    ViewData["Title"] = "Ürün Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Silmek istediğinize emin misiniz ?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Ad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Açıklama
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Fiyat
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Image" width="50" />    
        </dd>
        <dt class = "col-sm-2">
            Ana Sayfada Var Mı
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IsHome)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-lg"></i> Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i> Hayır</label>
                        }
        </dd>
        <dt class = "col-sm-2">
            Stokta Var Mı ?
        </dt>
        <dd class = "col-sm-10">
             @if (Model.IsStock)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-lg"></i> Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i> Hayır</label>
                        }
        </dd>
        <dt class = "col-sm-2">
            Kategori
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-x-octagon"></i> Sil</button>
        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i> Geri Dön</a>
    </form>
</div>
